<?xml version="1.0"?>
<robot name="myfirst">

	<material name="blue">
		<color rgba="0 0 0.8 1"/>
	</material>

	<material name="white">
		<color rgba="1 1 1 1"/>
	</material>


	<link name="base_link">
		<visual>
			<geometry>
				<mesh filename="package://tacocat_description/mesh/base_link.STL"/>
			</geometry>
			<material name="white"/>
		</visual>
	</link>

	<joint name="base_to_wheel_right" type="continuous">
		<parent link="base_link"/>
		<child link="wheel_right"/>
		<origin xyz=" 0 -0.1 0"/>
	</joint>

	<link name="wheel_right">
		<visual>
			<origin rpy="1.570796 0 0"/>
			<geometry>
				<mesh filename="package://tacocat_description/mesh/wheel.STL"/>
			</geometry>
			<material name="blue"/>
		</visual>
	</link>

	<link name="wheel_left">
		<visual>
			<origin rpy="-1.570796 0 0"/>
			<geometry>
				<mesh filename="package://tacocat_description/mesh/wheel.STL"/>
			</geometry>
			<material name="blue"/>
		</visual>
	</link>

	<joint name="base_to_wheel_left" type="continuous">
		<parent link="base_link"/>
		<child link="wheel_left"/>
		<origin xyz=" 0 0.1 0"/>
	</joint>

</robot>
